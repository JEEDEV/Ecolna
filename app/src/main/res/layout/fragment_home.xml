<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ihm.com.ecolna.fragments.HomeFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ecolna"
            android:id="@+id/ecolna"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="0dp"
            android:layout_weight="0.21" />

        <TextView
            android:text="Ecolna est déstinés aux étudiants de la branche génie informatique réalisée par Maha BEN SALAH.
Vous trouvez des tutorials, vous pouvez tester votre niveau et vous pouvez posez vos questions."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="16sp"
            />
    </LinearLayout>

</RelativeLayout>